#!/bin/bash

set -e

function main {
  for rev in `revisions`; do
    git show $rev | view -
    echo "Do you want to progress through history?"
    select yn in "Yes" "No"; do
      case $yn in
        Yes ) break;;
        No ) exit;;
      esac
    done
  done
}

function revisions {
  git rev-list --reverse HEAD
}

main
