[user]
       name = Ryan Castillo
       email = rmcastil@gmail.com
[alias]
       co = checkout
       iteration = log --pretty='tformat:%h (%ar) -- %d %s' --since='2 weeks ago' --author='rmcastil'
       save = !git add -A && git commit -m 'SAVEPOINT'
       unsave = reset HEAD~1 --mixed
[color]
       ui = auto
[core]
        excludesfile = ~/.gitignore
        editor = nvim
        autocrlf = input
[apply]
        whitespace = nowarn
[push]
        default = current
