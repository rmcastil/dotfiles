#!/usr/local/bin/zsh

set -e

# Turn on history for noninteractive shell
fc -R ~/.zsh_history

command_name=$1

function main {
  history 1 |
  body |
  calculate_totals_and_sort
}

function calculate_totals_and_sort {
  sort |
  uniq -c |
  sort -r |
  head
}

function body {
  if [ -n "$command_name" ]
  then
    awk '{ $1=""; print; }' |
    grep "$command_name" |
    awk '{ print $1, $2 }'
  fi
  print_second_argument
}

function print_second_argument {
  awk '{ print $2 }'
}

main
